doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Eshop
    link(rel='stylesheet', href='../../css/style.css')
  body
    .main-content
      header.header.bg-white#header
        .container
          .page-header
            .header-left
              .logo-image
                a(href="/product/home")
                  img(src='../../images/wigo-logo-img.png', width='70', height='36', alt='Wigo Store', itemprop='logo')
              .header-menu
                nav.navigation
                  ul
                     li
                       a(href='/product/collections') Collections
            .header-right
              .header-items
                span.sign-in
                  svg(width='22px', height='22px', viewBox='-1 -1 21 20')
                    g(transform='translate(0.968750, -0.031250)', stroke='none', stroke-width='1', fill='currentColor', fill-rule='nonzero')
                      path(d='M9,7.5 C10.704,7.5 12.086,6.157 12.086,4.5 C12.086,2.843 10.704,1.5 9,1.5 C7.296,1.5 5.914,2.843 5.914,4.5 C5.914,6.157 7.296,7.5 9,7.5 Z M9,9 C6.444,9 4.371,6.985 4.371,4.5 C4.371,2.015 6.444,0 9,0 C11.556,0 13.629,2.015 13.629,4.5 C13.629,6.985 11.556,9 9,9 Z M1.543,18 L0,18 L0,15 C0,12.377 2.187,10.25 4.886,10.25 L14.143,10.25 C16.273,10.25 18,11.929 18,14 L18,18 L16.457,18 L16.457,14 C16.457,12.757 15.421,11.75 14.143,11.75 L4.886,11.75 C3.04,11.75 1.543,13.205 1.543,15 L1.543,18 Z')
                  .head-link.bg-white
                    a.main-menu-link(href='/logout') Logout
                    a(href='/profile') Profile
                span.cart-link
                  a(href='/product/cart')
                    svg(width='24px', height='24px', viewBox='0 -2 37 35')
                      g(transform='translate(0.500000, 0.500000)', stroke='none', fill='currentColor', fill-rule='nonzero')
                        path(d="M0.2,11 L9.5,29 L26.4,29 L35.7,11 L0.2,11 Z M24.5,26 L11.5,26 L4.8,14 L31.2,14 L24.5,26 L24.5,26 Z M18.5,3 C22.7,3 25.5,6.3 25.5,8.5 L28.5,8.5 C28.5,4.5 24.2,0 18.5,0 C12.8,0 8.5,4.5 8.5,8.5 L11.5,8.5 C11.5,6.3 14.3,3 18.5,3 Z")
      section
        .container
          .checkout-template.page-content
            h2 Checkout
            .checkout-details.row
              .checkout-wrap
                .checkout-section
                  .contact-info#payment-form
                    .fieldset
                      h3 Contact information
                      .field-input
                        label(for="name") Name
                        span
                          input.input-text(placeholder="Enter your name", type="text" ,id="name")
                      .field-input
                        label(for="name") Email Id
                        span
                          input.input-text(placeholder="Enter your email id", type="email", id="email")
                      .field-input
                        label(for="name") Phone
                        span
                          input.input-text(placeholder="Enter your phone no.", type="text" ,id="mobile")
                      .field-input
                        label(for="name") Address
                        span
                          input.input-text(placeholder="Enter your address", type="text", id="address")
                      .field-input
                        label(for="name") Postal Code
                        span
                          input.input-text(placeholder="Enter your postal code", type="text" ,id="postalCode")
                    .fieldset
                      h3 Shipping Address
                      .field-input
                        label(for="name") Name
                        span
                          input.input-text(placeholder="Enter your name", type="text" ,id="name")
                      .field-input
                        label(for="name") Email Id
                        span
                          input.input-text(placeholder="Enter your email id", type="email", id="email")
                      .field-input
                        label(for="name") Phone
                        span
                          input.input-text(placeholder="Enter your phone no.", type="text",id="mobile")
                      .field-input
                        label(for="name") Address
                        span
                          input.input-text(placeholder="Enter your address", type="text", id="address")
                      .field-input
                        label(for="name") Postal Code
                        span
                          input.input-text(placeholder="Enter your postal code", type="text",id="postalCode")
                      #message
                    .action-btn
                      a.button.button--hollow.proceedPay.payCheckout(href="#") Proceed to Payment
                      a.button.secondary-btn(href="/product/cart") Return to Cart
                  .order-summary-right
                    .order-summary__sections
                      .order-summary__section__content
                        table.product-table
                          thead.product-table__header
                            tr
                              th: span(visually-hidden) Image
                              th: span(visually-hidden) Product Name
                              th: span(visually-hidden) Quantity
                              th: span(visually-hidden) Price
                          tbody
                            each cartProduct in cartProducts
                              tr.product
                                td.product__image
                                  div.product-thumbnail
                                    div.product-thumbnail__wrapper
                                      img.product-thumbnail__image(src=`${cartProduct.url}`, alt='Basic Green T-Shirt')
                                    span.product-thumbnail__quantity
                                td.product__description(scope='row')
                                  span.product__description__name= `${cartProduct.productName}`
                                  span.product__description__variant
                                td.product__quantity
                                  span.product-thumbnail_quantity
                                td.product__price
                                  span.order-summary__emphasis= `${cartProduct.price}`
                         
                            
                        //- .cart-promo
                        //-   h4 PROMO CODE
                        //-   div.mt-10
                        //-     input(type='text', placeholder='Gift card or discount code', id='')
                        //-   a.button.button--hollow.inline-block(href='#') Apply Coupon
                        p.no-margin.evenly-align.mt-20
                          span.cart-total-quantity= `${cartProducts.length} items`
                          span.cart-total-price.totalpriceAll
                            span 
                              //- .cart-subtotal.evenly-align.cart__total
                              //-   span.cart-subtotal__title Subtotal
                              //-   strong
                              //-     span.cart-subtotal__price.subtotal
                        .cart-subtotal.evenly-align.cart__total
                          span.cart-subtotal__title Discount
                          strong
                            span.cart-subtotal_price.discount.discount-Total-Price
                        
                        .cart__total.evenly-align.separator
                          span.cart__total-text Total:
                          strong.cart__total-price.text-lg
                            span.finalAmount 
                            span $
  
  script(src='/js/checkoutSummary.js')  
  script(src='/js/contactDetails.js')  
  script(src='/js/paymentCheckout.js')  

  