        .container
          .checkout-template.page-content
            h2 Checkout
            .checkout-details.row
              .checkout-wrap
                .checkout-section
                  .contact-info
                    .fieldset
                      h3 Payment
                      p.mt-20 All transactions are secure and encrypted.
                      .field-input
                        label(for='name') Card Number
                        span
                          input.input-text(type='text', placeholder='Card number',id="cardNumber")
                      .field-input
                        label(for='name') Name on Card
                        span
                          input.input-text(type='text', placeholder='',id="nameOnCard")
                      .flex
                        .field-input.w-50
                          label(for='name') Expiration Date
                          span
                            input.input-text(type='text', placeholder='MM/YY',id="expDate")
                        .field-input.w-50.ml-20
                          label(for='name') Security Code
                          span
                            input.input-text(type='text', placeholder='Security Code',id="securityCode")
                    #message
                    .action-btn
                      a.button.button--hollow.payNow(href='#') Pay Now
                      a.button.secondary-btn(href='/product/cart') Return to Cart
                  .order-summary-right
                    .order-summary__sections
                      div
                        table.product-table
                          thead.product-table__header
                            tr
                              th: span(visually-hidden) Image
                              th: span(visually-hidden) Product Name
                              th: span(visually-hidden) Quantity
                              th: span(visually-hidden) Price
                          tbody
                            each cartProduct in cartProducts
                              tr.product
                                td.product__image
                                  div.product-thumbnail
                                    div.product-thumbnail__wrapper
                                      img.product-thumbnail__image(src=`${cartProduct.url}`, alt="Basic Green T-Shirt")
                                    span.product-thumbnail__quantity 
                                td.product__description(scope="row")
                                  span.product__description__name= `${cartProduct.productName}`
                                  span.product__description__variant
                                td.product__quantity
                                  span.product-thumbnail_quantity
                                td.product__price
                                  span.order-summary__emphasis= `${cartProduct.price}` 
                            
